{
  "manifest_version": 3,
  "name": "CodeSync",
  "version": "1.0",
  "permissions": ["clipboardRead", "activeTab"],
  "host_permissions": ["https://leetcode.com/*"],
  "content_scripts": [{
    "matches": ["https://leetcode.com/problems/*"],
    "js": ["content.js"]
  }],
  "background": {
    "service_worker": "background.js"
  }
}
