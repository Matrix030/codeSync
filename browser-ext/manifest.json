{
  "manifest_version": 2,
  "name": "CodeSync",
  "version": "1.0",
  "description": "Sync LeetCode solutions between Neovim and browser",
  "permissions": [
    "activeTab",
    "http://localhost:8080/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "CodeSync"
  },
  "icons": {
    "48": "icon.png"
  }
}
